<%= form_with(model: listing, local: true, class: "space-y-6") do |form| %>
  <% if listing.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <strong class="font-bold"><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :species, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :species, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :breed_1, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :breed_1, options_for_select(Breeds.dog), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :breed_2, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :breed_2, options_for_select(['Breed 2 Option 1', 'Breed 2 Option 2', 'Breed 2 Option 3']), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :color_1, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :color_1, options_for_select(['Color 1 Option 1', 'Color 1 Option 2', 'Color 1 Option 3']), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :color_2, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :color_2, options_for_select(['Color 2 Option 1', 'Color 2 Option 2', 'Color 2 Option 3']), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :color_3, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :color_3, options_for_select(['Color 3 Option 1', 'Color 3 Option 2', 'Color 3 Option 3']), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.hidden_field :status, value: "active" %>
  </div>

  <div>
    <%= form.submit "Submit", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
