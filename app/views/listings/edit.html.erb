<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold text-blue-600 mb-6">Edit Report</h1>

  <div class="p-6 bg-white rounded-lg shadow-lg">
    <%= form_with(model: @listing, local: true) do |form| %>
      <!-- Title -->
      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Description -->
      <div class="mb-4">
        <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_area :description, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <!-- Species -->
      <div class="mb-4">
        <%= form.label :species, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :species, options_for_select(ListingsHelper::SPECIES), { prompt: "What kind of animal?" }, required: true, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Breed 1 -->
      <div class="mb-4">
        <%= form.label :breed_1, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :breed_1, options_for_select(ListingsHelper::DOG_BREEDS), { prompt: "Select a breed" }, required: true, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Breed 2 -->
      <div class="mb-4">
        <%= form.label :breed_2, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :breed_2, options_for_select(ListingsHelper::DOG_BREEDS), { prompt: "Select a breed" }, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Color 1 -->
      <div class="mb-4">
        <%= form.label :color_1, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :color_1, options_for_select(ListingsHelper::COLORS), { prompt: "Select a color"}, required: true, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Color 2 -->
      <div class="mb-4">
        <%= form.label :color_2, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :color_2, options_for_select(ListingsHelper::COLORS), { prompt: "Select a color"}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Color 3 -->
      <div class="mb-4">
        <%= form.label :color_3, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.select :color_3, options_for_select(ListingsHelper::COLORS), { prompt: "Select a color"}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= form.submit "Update Listing", class: "inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600" %>
        <%= link_to "Back to Listings", listings_path, class: "inline-block ml-4 px-4 py-2 bg-gray-500 text-white font-semibold rounded hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>
</div>
